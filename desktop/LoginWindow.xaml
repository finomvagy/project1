<Window x:Class="BookCatalog.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookCatalog"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label>Username</Label>
        <Label Grid.Row="1">Password</Label>
        <TextBox Grid.Column="1" x:Name="usernameField"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="passwordField"/>
        <Button Grid.Row="2" x:Name="registerButton" Click="registerButton_Click">Register</Button>
        <Button Grid.Row="2" Grid.Column="1" x:Name="loginButton" Click="loginButton_Click">Login</Button>
    </Grid>
</Window>
