<UserControl x:Class="BookCatalog.BookControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookCatalog"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderThickness="2" Margin="10" BorderBrush="Black" MinWidth="200" Cursor="Hand" MouseUp="Border_MouseUp">
        <StackPanel>
            <Label Content="{Binding Author}"/>
            <Label Content="{Binding Title}" FontWeight="Bold"/>
        </StackPanel>
    </Border>
</UserControl>
